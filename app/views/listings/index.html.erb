<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<% @listings.each do |listing| %>
  
    <div class="listings-section">
      <div class="row justify-content-center">
        <div class="col-md-3 col-sm-12">
          <div class="listing-image-section">
            <img src="<%= listing.image %>" alt="listing image">
          </div>
        </div>

        <div class="col-md-4 col-sm-12">
          <p class="listings-title"><%= listing.title %></p>
          <p class="listings-category"><%= listing.category %></p>
        </div>

        <div class="col-md-3 col-sm-12">
          <div class="listing-box">
            <p class="listings-price">AU $<%= listing.price %></p>
            <button type="button" class="btn btn-outline-primary"><%= link_to 'Details', listing %></button>
          </div>
        </div>
      </div>
    </div>

  
<% end %>


  <table>
    <thead>
      <tr>
        <th class="test">Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Image</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td><%= listing.title %></td>
          <td><%= listing.description %></td>
          <td><%= listing.price %></td>
          <td><%= listing.image %></td>
          <td><%= listing.category %></td>
          <td><%= link_to 'Show', listing %></td>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Listing', new_listing_path %>
