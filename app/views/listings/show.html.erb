<p id="notice"><%= notice %></p>

<div class="container">
  <div class="listing m-3">
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <img src="http://via.placeholder.com/250x250" alt="listing image">
        <%= @listing.image %>
      </div>

      <div class="col-md-4 col-sm-12">
        <p class="listing-title"><%= @listing.title %></p>
        <p class="listing-category">{CATEGORY}</p>
        <%= link_to 'Back', listings_path %>      
        <%= link_to 'Edit', edit_listing_path(@listing) %>
        <%= link_to 'Destroy', @listing, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>

      <div class="col-md-4 col-sm-12">
        <div class="seller-container">
          <p>Sold by: {SELLER}</p>
          <h4><%= @listing.price %></h4>
          <button type="button" class="btn btn-outline-primary">Message {SELLER}</button>
          <button type="button" class="btn btn-outline-primary">Add to cart</button>
        </div>
      </div>
    </div>

    <div class="listing-details">
      <p>Description</p>
      <p class="listing-description"><%= @listing.description %></p>
    </div>
</div>






</div>
